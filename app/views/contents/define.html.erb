<%- model_class = @content.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => t('helpers.titles.define', :model => model_class.model_name.human,
                   :default => "Define #{model_class.model_name.human}") %></h1>
</div>
<%= form_for @content, :as => :content, :url => renovate_content_path(@content.id), :html => { :class => 'form-horizontal' } do |f| %>
  <%= render :partial => 'form', :locals => {f: f} %>
<% end %>
