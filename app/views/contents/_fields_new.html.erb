<fieldset>
  <div class="control-group">
    <%= f.label :slug, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :slug, :class => 'text_field', disabled: !@content.new? %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label 'title', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field' %>
    </div>
  </div>
</fieldset>